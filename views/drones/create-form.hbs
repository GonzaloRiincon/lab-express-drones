<div class="container">
    <h2>Create a new drone</h2>
    <br>
    <div class="row justify-content-center">

        <div class="col-md-6 card">
            <form action="/drones/create" method="POST">
                <div class="mb-3">
                    <label class="fs-2 fw-bold" for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>

                <div class="mb-3">
                    <label class="fs-2 fw-bold" for="propellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="propellers" name="propellers">
                </div>

                <div class="mb-3">
                    <label class="fs-2 fw-bold" for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                <div class="d-grid mt-5 mb-4">
                    <button type="submit" class="btn btn-dark btn-lg">Add new drone</button>
                </div>
            </form>
        </div>
    </div>
</div>